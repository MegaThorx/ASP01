@model PaginatedListData

<nav aria-label="Page navigation">
    <ul class="pagination">
        @if (Model.HasPreviousPage)
        {
            <li>
                <a href="?page=@(Model.PageIndex-1)&pageSize=@Model.PageSize" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
        }
        else
        {
            <li class="disabled">
                <span aria-hidden="true">&laquo;</span>
            </li>
        }
        @for (var i = Model.PageIndex - 4; i < Model.PageIndex; i++)
        {
            if (i > 0)
            {
                <li><a href="?page=@i&pageSize=@Model.PageSize">@i</a></li>
            }
        }
        <li class="active"><a href="?page=@Model.PageIndex&pageSize=@Model.PageSize">@Model.PageIndex</a></li>
        @for (var i = Model.PageIndex + 1; i < Model.PageIndex + 5; i++)
        {
            if (i < Model.TotalPages)
            {
                <li><a href="?page=@i&pageSize=@Model.PageSize">@i</a></li>
            }
        }
        @if (Model.HasNextPage)
        {
            <li>
                <a href="?page=@(Model.PageIndex+1)&pageSize=@Model.PageSize" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        }
        else
        {
            <li class="disabled">
                <span aria-hidden="true">&raquo;</span>
            </li>
        }
    </ul>
</nav>

<div class="btn-group" role="group">
    <a href="?page=1&pageSize=10" class="btn @(Model.PageSize == 10 ? " btn-primary" : "btn-default" )">10</a>
    <a href="?page=1&pageSize=25" class="btn @(Model.PageSize == 25 ? "btn-primary" : "btn-default")">25</a>
    <a href="?page=1&pageSize=50" class="btn @(Model.PageSize == 50 ? "btn-primary" : "btn-default")">50</a>
    <a href="?page=1&pageSize=100" class="btn @(Model.PageSize == 100 ? "btn-primary" : "btn-default")">100</a>
</div>