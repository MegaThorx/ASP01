@model IEnumerable<ASP01.Models.ViewModels.CustomerNamesView>
@{
    ViewBag.Title = "Index";
}


<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                
                @if(User.IsInRole("Admin"))
                {
                    @Html.ActionLink("Edit", "Edit", "Customers", new {id = item.CustomerId}, new {@class = "btn btn-sm btn-primary"})
                }
                @if (User.IsInRole("Office"))
                {
                    @Html.ActionLink("Edit Name", "EditName", "Customers", new {id = item.CustomerId, returnUrl = Request.Url.LocalPath }, new {@class = "btn btn-primary"})
                }
                @Html.ActionLink("Details", "Details", "Customers", new {id = item.CustomerId}, new {@class = "btn btn-sm btn-primary"})
            </td>
        </tr>
    }
</table>